<h1>New Entry</h1>

<form action="/entries" method="post">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-3">
    <label class="form-label" for="title_input">Title</label>
    <input class="form-control" type="text" name="title" id="title_input">  
  </div>
  <div class="mb-3">
    <label class="form-label" for="description_input">Description</label>
    <input class="form-control" type="text" name="description" id="description_input">
  </div>
  <div class="mb-3">
    <label class="form-label" for="occured_on_input">Occured On</label>
    <input class="form-control" type="date" name="occured_on" id="occured_on_input">
  </div>
  <div class="mb-3">
  <label for="uploaded_image_input" class="form-label">Upload Image</label>
  <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control" accept="image/png, image/jpg, image/jpeg, image/gif">
</div>
  <div class="mb-3">
	  <button class="btn btn-primary">Save</button>
  </div>
</form>